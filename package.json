{
  "name": "noto",
  "version": "1.0.0",
  "description": "A powerful desktop research and note-taking application with PDF annotation and cloud sync",
  "main": "dist/main/index.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron . --inspect",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "package": "electron-builder --dir",
    "make": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^7.5.1",
    "pdfjs-dist": "^3.11.174",
    "pdf-lib": "^1.17.1",
    "@monaco-editor/react": "^4.6.0",
    "monaco-editor": "^0.44.0",
    "markdown-it": "^13.0.2",
    "markdown-it-katex": "^2.0.3",
    "katex": "^0.16.9",
    "highlight.js": "^11.9.0",
    "uuid": "^9.0.1",
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.7",
    "@types/markdown-it": "^13.0.6",
    "@types/markdown-it-katex": "^2.0.1",
    "@types/node": "^20.9.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.noto.app",
    "productName": "Noto",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "note-taking",
    "pdf",
    "annotation",
    "markdown",
    "research",
    "academia",
    "electron",
    "google-drive",
    "sync"
  ]
}
