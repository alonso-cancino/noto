{
  "name": "noto",
  "version": "1.0.0",
  "description": "A powerful desktop research and note-taking application with PDF annotation and cloud sync",
  "main": "dist/main/main/index.js",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development tsc -p tsconfig.main.json && electron . --inspect",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "package": "electron-builder --dir",
    "make": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf dist",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate-icons || echo 'Icon generation skipped (dependencies not installed)'",
    "build:full": "bash scripts/build.sh",
    "release": "bash scripts/release.sh",
    "validate": "node scripts/validate-build.js"
  },
  "dependencies": {
    "@milkdown/core": "^7.17.1",
    "@milkdown/ctx": "^7.17.1",
    "@milkdown/plugin-history": "^7.17.1",
    "@milkdown/plugin-listener": "^7.17.1",
    "@milkdown/plugin-math": "^7.5.9",
    "@milkdown/preset-commonmark": "^7.17.1",
    "@milkdown/prose": "^7.17.1",
    "@milkdown/react": "^7.17.1",
    "@milkdown/theme-nord": "^7.17.1",
    "@monaco-editor/react": "^4.6.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.0.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "googleapis": "^166.0.0",
    "highlight.js": "^11.9.0",
    "idb": "^8.0.3",
    "katex": "^0.16.25",
    "markdown-it": "^13.0.2",
    "markdown-it-katex": "^2.0.3",
    "monaco-editor": "^0.44.0",
    "path-browserify": "^1.0.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^7.5.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.0",
    "@types/markdown-it": "^13.0.6",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.noto.app",
    "productName": "Noto",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false,
      "darkModeSupport": true,
      "type": "distribution"
    },
    "dmg": {
      "title": "Install Noto",
      "icon": "resources/icon.icns",
      "backgroundColor": "#1e1e1e",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180,
          "type": "file"
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Office",
      "icon": "resources/icon.png",
      "desktop": {
        "Name": "Noto",
        "Comment": "Research and note-taking application",
        "Categories": "Office;Education;",
        "MimeType": "text/markdown;application/pdf;",
        "Keywords": "notes;markdown;pdf;research;annotation;"
      },
      "maintainer": "Noto Team <noto@example.com>",
      "vendor": "Noto",
      "synopsis": "Research and note-taking application with PDF annotation"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "libXScrnSaver"
      ],
      "fpm": [
        "--rpm-rpmbuild-define=_build_id_links none"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Noto",
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh",
      "license": "build/license.txt",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "displayLanguageSelector": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "noto",
      "releaseType": "release"
    }
  },
  "keywords": [
    "note-taking",
    "pdf",
    "annotation",
    "markdown",
    "research",
    "academia",
    "electron",
    "google-drive",
    "sync"
  ]
}
